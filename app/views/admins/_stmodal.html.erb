<div class="modal fade" id="newStudentModal" tabindex="-1" role="dialog" aria-labelledby="newAdminLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newTeacherModalLabel">Neue Pr√§sentation</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_for(@student, url: student_new_path) do |f| %>
      <div class="modal-body">
        <div class="form-new">

          <%= f.label :vorname, 'Vorname', class: "sr-only" %>
          <%= f.text_field :vorname, class: "form-control", placeholder: "Vorname", id: "top", required: true %>

          <%= f.label :name, 'Name', class: "sr-only" %>
          <%= f.text_field :name, class: "form-control", placeholder: "Name", id: "mid", required: true %>

          <%= f.label :klasse, 'Klasse', class: "sr-only" %>
          <%= f.text_field :klasse, class: "form-control", placeholder: "Klasse", id: "mid", required: true %>

          <%= f.label :mail, 'Mail', class: "sr-only" %>
          <%= f.text_field :mail, class: "form-control", placeholder: "Mail", id: "mid", required: true %>

          <%= f.label :number, 'Nummer', class: "sr-only" %>
          <%= f.text_field :number, class: "form-control", placeholder: "Nummer", id: "mid", required: true %>

          <%= f.label :code, 'Passwort', class: "sr-only" %>
          <%= f.text_field :code, value: @pass, class: "form-control", id: "btm", required: true, disabled: true %>

          <%= f.hidden_field :code, value: @pass.to_s %>
          <%= f.hidden_field :password, value: @pass.to_s %>
          <%= f.hidden_field :password_confirmation, value: @pass.to_s %>

          <span class="text-muted">Passwort wurde automatisch generiert</span>
      </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Abbrechen</button>
        <%= f.submit 'Speichern', class: "btn btn-primary btn-block" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
