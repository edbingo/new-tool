<div class="row">
  <div class="col-sm">
    <div class="card mb-3">
      <div class="card-header">
        Grundinfo
      </div>
      <div class="card-body">
        <h5 class="card-title"><%= @student.vorname %> <%= @student.name %>, <%= @student.klasse %></h5>
        <table class="table table-hover sorttable table-sm">
          <thead>
            <tr>
              <th>Mail</th>
              <th>Nummer</th>
              <th>Passwort</th>
            </tr>
          </thead>
          <tbody>
              <tr>
                <td><%= @student.mail %></td>
                <td><%= @student.number %></td>
                <td><%= @student.code %></td>
              </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="col-sm">
    <div class="card mb-3">
      <div class="card-header">
        Schülerstatus
      </div>
      <div class="card-body">
        <% if @student.rec %>
          Mailstatus: <strong class="text-success">Anmeldedaten erhalten</strong>
        <% else %>
          Mailstatus: <strong class="text-warning">Anmeldedaten nicht erhalten</strong>
        <% end %>
        <br>
        <% if @student.register %>
          Registrationsstatus: <strong class="text-success">Registration erfolgreich</strong>
        <% else %>
          Registrationsstatus: <strong class="text-warning">Registration noch nicht erhalten</strong>
        <% end %>
        <hr>
        <% if @student.rec && !@student.register %>
          <%= link_to "Mahnmail versenden", '#', class: "btn btn-primary" %>
        <% elsif !@student.rec %>
          <%= link_to "Anmeldedaten versenden", '#', class: "btn btn-primary" %>
        <% end %>
        <% unless @student.reigster %>
          <%= link_to "Force", force_path(:id => stud.id), class: "btn btn-primary" %>

      </div>
    </div>
  </div>
</div>

<div class="card mb-3">
  <div class="card-header">
    Ausgewählte Präsentationen
  </div>
  <div class="card-body">
  <% if @student.select.count == 0 %>
    Dieser Schüler hat noch keine Präsentationen ausgewählt
  <% else %>
    <table class="table table-hover sorttable table-sm">
      <thead>
        <tr class="srt">
          <th>Vorname</th>
          <th>Nachname</th>
          <th>Titel</th>
          <th>Fach</th>
          <th>Betreuer</th>
          <th>Zimmer</th>
          <th>Von</th>
          <th>Bis</th>
        </tr>
      </thead>
      <tbody>
        <% @presentations.each do |pres| %>
          <tr>
            <td><%= pres.vorname %></td>
            <td><%= pres.name %></td>
            <td><%= pres.titel %></td>
            <td><%= pres.fach %></td>
            <td><%= link_to pres.betreuer, list_teachers_view_path(:number => pres.betreuer) %></td>
            <td><%= pres.zimmer %></td>
            <td><%= Time.at(pres.von.to_f).utc.strftime("%H:%M") %></td>
            <td><%= Time.at(pres.bis.to_f).utc.strftime("%H:%M") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
  </div>
</div>
